<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="@string/carro_a_control_remoto"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="155dp"
        android:contentDescription="@string/strcontent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/btn_down"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_stop"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="155dp"
        android:contentDescription="@string/strcontent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/down" />

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btn_stop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/strcontent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/btn_rigth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btn_stop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/strcontent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/rigth" />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_up"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="155dp"
        android:contentDescription="@string/strcontent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/stop" />

    <Button
        android:id="@+id/btn_act_aut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_down"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="125dp"
        android:text="@string/modo_aut_nomo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>